{
  "name": "stream-schemas",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "version:disabled": "yarn install --no-immutable && git stage yarn.lock",
    "prepare": "node ./configure-references.js || echo 'skipping configure references!'",
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream --parallel",
    "test": "yarn jest \"packages/.*\\.(spec|test)\\.ts$\" --coverage",
    "test:e2e": "yarn jest \"packages/.*\\.e2e\\.ts$\" --coverage --forceExit --runInBand",
    "pub": "lerna publish --no-verify-access"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.20",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  }
}
